import RPi.GPIO as GPIO
import time

# Ultrasonic Sensor Pins
TRIG = 18
ECHO = 25

# GPIO Setup
GPIO.setmode(GPIO.BCM)
GPIO.setup(TRIG, GPIO.OUT)
GPIO.setup(ECHO, GPIO.IN)

def get_distance():
    GPIO.output(TRIG, False)
    time.sleep(0.1)
    GPIO.output(TRIG, True)
    time.sleep(0.00001)
    GPIO.output(TRIG, False)

    pulse_start, pulse_end = time.time(), time.time()
    while GPIO.input(ECHO) == 0:
        pulse_start = time.time()
    while GPIO.input(ECHO) == 1:
        pulse_end = time.time()

    distance = (pulse_end - pulse_start) * 17150  # Convert to cm
    return round(distance, 2)

while True:
    distance = get_distance()
    print(f"ðŸš§ Distance to obstacle: {distance} cm")

    if distance < 20:
        print("âš ï¸ Obstacle detected! Stopping motors.")
        subprocess.run(["./motor_control", "STOP"])  # Stop motors
        time.sleep(2)

    time.sleep(1)
